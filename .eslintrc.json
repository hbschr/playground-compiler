{
    "env": {
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "complexity": ["error", 10],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "max-len": ["error", { "code": 120 }],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "space-before-function-paren": ["error", "always"]
    }
}
